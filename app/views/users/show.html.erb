      <% end %>
    <% end %>

    <h2 class="py-3" style="font-weight: 600; font-family: 'Inter', sans-serif; border: solid #F2B63E 5px; border-radius: 3px; width: 87vw; text-align: center;">Shopping List</h2>

    <h2 class="py-3" style="font-weight: 600; font-family: 'Inter', sans-serif; border: solid #F2B63E 5px; border-radius: 3px; width: 87vw; text-align: center;">Calendar</h2>

    <%= link_to user_oddbook_path(current_user), style: "text-decoration: none; color: black;" do %>
      <h2 class="py-3" style="font-weight: 600; font-family: 'Inter', sans-serif; border: solid #F2B63E 5px; border-radius: 3px; width: 87vw; text-align: center;" >OddBook</h2>
    <% end %>
  </div>
</div>
