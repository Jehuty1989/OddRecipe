<div class="container d-flex flex-column" style="background-color: white; height: 620px; font-family: 'Inter', sans-serif;
 font-family: 'Inter', sans-serif;">
  <div class="d-flex align-items-center flex-column">
    <div class="d-flex flex-column align-items-center py-2">
      <h2 style="color: #2E5A36; font-weight: 700; font-size: 26pt;">OddBox</h2>
    </div>
    <div class="d-flex" style="padding: 16px; border: solid #F2B63E 5px; border-radius: 3px; width: 87vw;">
      <div>
        <h5 style="font-weight: 600; font-size: 10pt;">Box contents:</h5>
        <% ings = @oddbox.ingredients.map(&:name).join(", ") %>
        <p style="font-weight: 400; font-size: 8pt; margin-bottom: 0; padding-right: 20px;"><%= ings %></p>
      </div>
      <div class="d-flex flex-column justify-content-between">
        <h5 style="font-weight: 600; font-size: 10pt;"><%= @oddbox.name %></h5>
        <%= image_tag("med_oddbox.png", style: "width: 105px;") %>
      </div>
    </div>
  </div>
  <div class="d-flex flex-column py-2">
    <div class="align-self-center">
      <h2 class="my-2" style="color: #2E5A36; font-weight: 300; font-size: 16pt;">Top 5 recipes this week:</h2>
    </div>
    <% @oddbox.recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe) do %>
        <div class="meal-plan-show">
          <div class="card-product">
            <%= image_tag(recipe.image_url) %>
            <div class="text-recipe">
              <div class="card-product-infos">
                <h2><%= recipe.name %></h2>
                <p>Total time: <%= recipe.cooking_time %></p>
              </div>
              <div class="stars-meal-plan">
                <ul class="stars-index">
                <% 5.times do |x| %>
                  <% if x < recipe.rating %>
                    <li class="fa fa-star checked"></li>
                  <% else %>
                    <li class="fa fa-star"></li>
                  <% end %>
                <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
