<div class="container d-flex flex-column align-items-center" style="background-color: white; height: 620px; font-family: 'Inter', sans-serif;
 font-family: 'Inter', sans-serif;">
  <div class="d-flex flex-column align-items-center py-2">
    <h2 style="color: #2E5A36; font-weight: 700; font-size: 26pt;">OddBox</h2>
  </div>
  <div class="d-flex" style="padding: 16px; border: solid #F2B63E 5px; border-radius: 3px; width: 73vw;">
    <div>
      <h5 style="font-weight: 600; font-size: 10pt;">Box contents:</h5>
      <% ings = @oddbox.ingredients.map(&:name).join(", ") %>
      <p style="font-weight: 400; font-size: 8pt; margin-bottom: 0; padding-right: 20px;"><%= ings %></p>
    </div>
    <div class="d-flex flex-column justify-content-between">
      <h5 style="font-weight: 600; font-size: 10pt;"><%= @oddbox.name %></h5>
      <%= image_tag("med_oddbox.png", style: "width: 105px;") %>
    </div>
  </div>
  <div class="d-flex flex-column align-items-center py-2">
    <h2 class="my-2" style="color: #2E5A36; font-weight: 300; font-size: 16pt;">Top 5 recipes this week:</h2>
    <% @oddbox.recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe), style: "text-decoration: none; color: black; border: solid #2E5A36 5px; width: 73vw; height: 100px; margin-bottom: 8px;" do %>
        <div class="d-flex">
          <%= image_tag(recipe.image_url, style: "width: 80%; height: 90px; object-fit: cover;") %>
          <div class="container">
            <h4 style="font-weight: 400; font-size: 14pt;"><%= recipe.name %></h4>
            <p style="margin: 0;"><%= recipe.rating %> / 5</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
