<div class="container" data-controller="search-recipes">
  <div class="d-flex flex-column align-items-center py-2">
      <h2 class="rec-head-index">Recipes</h2>
  </div>
  <div class="d-flex justify-content-center">
    <%= form_with url: recipes_path, method: :get, html: { class: "mb-3", data: { search_recipes_target: "form" } } do |f| %>
      <%= f.text_field :query, class: "rec-search-box form-control", placeholder: "Search for a recipe", value: params[:query], data: { search_recipes_target: "input", action: 'keyup->search-recipes#update' } %>
    <% end %>
  </div>
  <%= render "list", recipes: @recipes %>
</div>
