<div class="container">
  <div class="recipe-header">
    <h1><%= @recipe.name %></h1>
  </div>
    <div class="recipe-img">
      <img src="https://static01.nyt.com/images/2020/04/22/dining/21milkbarrex2/merlin_171379644_8f93d0c8-c7ca-41ae-a8f0-e09b4d0436ad-articleLarge.jpg" alt="Food Image" style="width: 100%;">
        <i class="fa fa-solid fa-heart"></i>
    </div>
    <div class="recipe-card-links">
      <div class="recipe-time">
        <p> Total Time: <%= @recipe.cooking_time %> minutes </p>
          <ul class="recipe-stars"> <% 5.times do |x| %>
            <% if x < @recipe.rating %>
              <li class="fa fa-star checked"> </li>
            <% else %>
              <li class="fa fa-star"> </li>
            <% end %>
           <% end %>
          </ul>
      </div>
        <div class="recipe-cal-btn">
        <button type="button" class="btn btn-outline-success mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal"> Add to Calendar </button>
          <div class="modal" id="exampleModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header justify-content-center">
                  <h5 class="modal-title"> Calendar </h5>
                </div>

                <div class="modal-body">
                  <div id="multi-item-example" class="carousel slide carousel-multi-item" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                      <div class="carousel-item active">

                        <div class="row">
                          <div class="col-2">
                            <div class="card mb-2">
                              <div class="cal-card-title">
                                <p>1st</p>
                              </div>
                              <div class="cal-card-img">
                                <img src="https://static01.nyt.com/images/2020/04/22/dining/21milkbarrex2/merlin_171379644_8f93d0c8-c7ca-41ae-a8f0-e09b4d0436ad-articleLarge.jpg" alt="Food">
                              </div>
                              <div class="cal-card-day">
                                <p>Mon</p>
                              </div>
                            </div>
                          </div>

                          <div class="col-2">
                            <div class="card mb-2">
                              <div class="cal-card-title">
                                <p>2nd</p>
                              </div>
                              <div class="cal-card-img">
                                <img src="https://static01.nyt.com/images/2020/04/22/dining/21milkbarrex2/merlin_171379644_8f93d0c8-c7ca-41ae-a8f0-e09b4d0436ad-articleLarge.jpg" alt="Food">
                              </div>
                              <div class="cal-card-day">
                                <p>Tue</p>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
