<div class= " log-in-form container col-11 text-center" style="margin-top: 40px; font-family: 'Interstate-light'; sans-serif;">
  <h2 style="font-family: 'Interstate-regular';, sans-serif; margin-bottom: 23px;">Forgot your password?</h2>


<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
 </div>
